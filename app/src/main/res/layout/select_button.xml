<?xml version="1.0" encoding="utf-8"?>
<yong.tank.modal.SelectButton xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:id="@+id/bt">
    <!--有padding才能显示select的框，没办法-->
    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:src="@mipmap/origin"
        android:background="@drawable/with_border"
        />
    <TextView
        android:id="@+id/buttonNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="∞"
        android:paddingTop="1px"
        />
</yong.tank.modal.SelectButton>