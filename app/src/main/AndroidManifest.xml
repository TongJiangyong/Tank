<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yong.tank">
   <!-- 允许连入网络-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 允许使用蓝牙-->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>
    <!--网络状态访问权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Title_Activity.View.MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Title_Activity.View.LoginActivity"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Title_Activity.View.RegisterActivity"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".Title_Activity.View.WebInfoActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".SelectTank_Activity.View.SelectActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"></activity>
        <activity
            android:name="yong.tank.Title_Activity.View.BlutToothActivty"
            android:theme="@android:style/Theme.Dialog"
            android:configChanges="orientation|screenSize" ><!--设置切换后，方法不执行两次-->
        </activity>
        <activity android:name=".Game_Activity.GameActivity"
            android:configChanges="orientation|screenSize" ><!--设置切换后，方法不执行两次-->
            </activity>
        <activity android:name=".Result_Activity.view.ResultActivity" ></activity>
        <activity android:name=".Help_Activity.View.HelpActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" ><!--设置切换后，方法不执行两次-->
        </activity>
    </application>

</manifest>